#!/bin/bash

set -euo pipefail

GIT_ROOT=${GIT_ROOT:-$(git rev-parse --show-toplevel)}
. "${GIT_ROOT}/bin/include/versioning"

BASEDIR="$(cd "$(dirname "$0")/.." && pwd)"
set -v
CGO_ENABLED=0 go build -o "${BASEDIR}/binaries/eirini-ingress" -ldflags="-X github.com/mudler/eirini-ingress/version.Version=${ARTIFACT_VERSION}" cmd/eirini-ext/main.go
